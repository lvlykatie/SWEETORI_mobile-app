<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left part with circle and red background -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#E8486C"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_bg"
                android:gravity="center"
                android:text="Freeship"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Right part with voucher info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_voucher_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum discount ₫20k"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_voucher_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Order ₫50"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_voucher_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Effective from April 10"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#E8486C"
                android:text="Copy"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/discount_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color05">

                <ImageView
                    android:id="@+id/notifyImage"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/notify_2"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color05">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:id="@+id/notify_product"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Your order completed"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/time"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="21 : 30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/productName"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Sweetori is undergoing maintenance. Some features may be temporarily unavailable. We'll be back soon!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/color05">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color05">

                <ImageView
                    android:id="@+id/notifyImage_2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/notify_1"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color05">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:id="@+id/notify_product_2"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Maintenance Notice"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/time_2"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="17 : 30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/productName_2"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Sweetori is undergoing maintenance. Some features may be temporarily unavailable. We'll be back soon!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

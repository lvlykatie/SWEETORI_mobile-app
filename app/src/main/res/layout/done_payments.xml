<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card Or Debit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginTop="16dp" />

        <!-- Success Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_done"
            android:layout_marginTop="14dp" />

        <!-- Success Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
/>

        <!-- Thank You Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for shopping using Sweetori"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />

        <!-- Shipping Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F8F8"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Date Shipping"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtDateShipping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2020-05-25"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Shipping "
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtShipping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Express"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Phone number "
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0123456789"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Address "
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tp.HCM"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <!-- Payment Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F8F8"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtItemCount"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="590.000 VND"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Shipping "
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtdelivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20.000 VND"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Product discount"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtProductDiscount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-0 VND"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Voucher Discount"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtVoucher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-20.000 VND"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Payment Method"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtPaymentMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Momo"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Total Price"
                        android:textColor="#1A237E"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtxTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="518.000 VND"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        android:textColor="@color/color02"
                        android:gravity="end"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Done Button -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="24dp"
            android:backgroundTint="#E91E63"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/sign_button_bg" />
    </LinearLayout>
</ScrollView>

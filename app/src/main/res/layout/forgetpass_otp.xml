<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="Resend"
        android:textColor="@color/color01"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="484dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't get OTP?"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="484dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="Change email"
        android:textColor="@color/color01"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="634dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/sign_button_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="425dp" />

    <ImageView
        android:id="@+id/imageView4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/signup_curve" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="SWEETORI"
        android:textColor="#000000"
        android:textSize="64sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Create new password"
        android:textColor="@color/color02"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Enter the verification code sent to you."
        android:textSize="17sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="309dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="177dp"
        android:layout_height="43dp"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:inputType="number"
        android:hint="OTP"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="359dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
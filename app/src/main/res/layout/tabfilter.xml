<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvFilterTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filter Products"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color01"
                android:fontFamily="@font/poppins_bold"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close filter"/>
        </LinearLayout>


        <!-- Categories Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="16sp"
            android:textColor="@color/color01"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingEnd="16dp">

                <!-- Category Buttons -->
                <Button
                    android:id="@+id/btnBlush"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Blush"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnFoundation"
                    android:layout_width="85dp"
                    android:layout_height="72dp"
                    android:text="Foundation"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnLipstick"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Lipstick"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnConcealer"
                    android:layout_width="80dp"
                    android:layout_height="72dp"
                    android:text="Concealer"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnMascara"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Mascara"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnEyePalette"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:text="Eye Palette"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnContour"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Contour"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnEyebrows"
                    android:layout_width="75dp"
                    android:layout_height="72dp"
                    android:text="Eyebrows"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnEyeliner"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Eyeliner"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnPowder"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Powder"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnEyelashes"
                    android:layout_width="78dp"
                    android:layout_height="72dp"
                    android:text="Eyelashes"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnLipPencil"
                    android:layout_width="82dp"
                    android:layout_height="72dp"
                    android:text="Lip Pencil"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnHighlighter"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:text="Highlighter"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnFixingSpray"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:text="Fixing Spray"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnBrush"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Brush"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnSponge"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Sponge"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Brands Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brands"
            android:textSize="16sp"
            android:textColor="@color/color01"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingEnd="16dp">

                <!-- Brand Buttons -->
                <Button
                    android:id="@+id/btnJudydoll"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Judydoll"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnRomand"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Romand"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnMaybelline"
                    android:layout_width="85dp"
                    android:layout_height="72dp"
                    android:text="Maybelline"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnColorkey"
                    android:layout_width="73dp"
                    android:layout_height="72dp"
                    android:text="Colorkey"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnGlamrrQ"
                    android:layout_width="80dp"
                    android:layout_height="72dp"
                    android:text="Glamrr Q"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnMerzy"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="Merzy"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnBlackrouge"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:text="Blackrouge"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnLemonade"
                    android:layout_width="78dp"
                    android:layout_height="72dp"
                    android:text="Lemonade"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnIPKN"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="IPKN"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/color01"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Rate Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:textSize="16sp"
            android:textColor="@color/color01"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"/>
        <RadioGroup
            android:id="@+id/rgRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb5star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5★"
                android:textColor="@color/color01"
                android:layout_marginEnd="8dp" />
            <RadioButton
                android:id="@+id/rb4star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4★"
                android:textColor="@color/color01"
                android:layout_marginEnd="8dp" />
            <RadioButton
                android:id="@+id/rb3star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3★"
                android:textColor="@color/color01"
                android:layout_marginEnd="8dp" />
            <RadioButton
                android:id="@+id/rb2star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2★"
                android:textColor="@color/color01"
                android:layout_marginEnd="8dp" />
            <RadioButton
                android:id="@+id/rb1star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1★"
                android:textColor="@color/color01"/>
        </RadioGroup>

        <!-- Price Section -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:textColor="@color/color01"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"/>
        <RadioGroup
            android:id="@+id/rgPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbLowToHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low→High"
                android:textColor="@color/color01"
                android:layout_marginEnd="8dp" />
            <RadioButton
                android:id="@+id/rbHighToLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High→Low"
                android:textColor="@color/color01"/>
        </RadioGroup>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnApplyFilter"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:text="Apply filter"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/color02"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnClearFilter"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:text="Clear filter"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

